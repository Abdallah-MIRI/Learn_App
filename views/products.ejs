<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>All Products</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        padding: 2rem;
        background-color: #f2f2f2;
      }
      .card {
        height: 100%;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <a class="navbar-brand" href="/">My Store</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a
                class="nav-link <%= currentPage ? 'active' : '' %>"
                href="/products"
                >Products</a
              >
            </li>
            <!-- لو عندك صفحات تانية في المستقبل -->
            <!-- <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li> -->
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <h1 class="mb-4">Product List</h1>
      <div class="row">
        <% products.forEach(product => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= product.Name %></h5>
              <p class="card-text"><%= product.Category %></p>
              <p><strong>Price:</strong> $<%= product.Price %></p>
              <a href="/products/<%= product.Index %>" class="btn btn-primary"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- ✅ Pagination -->
      <nav>
        <ul class="pagination justify-content-center">
          <!-- زر السابق -->
          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="/products?page=<%= currentPage - 1 %>"
              >Previous</a
            >
          </li>

          <!-- أرقام الصفحات -->
          <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="/products?page=<%= i %>"><%= i %></a>
          </li>
          <% } %>

          <!-- زر التالي -->
          <li
            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>"
          >
            <a class="page-link" href="/products?page=<%= currentPage + 1 %>"
              >Next</a
            >
          </li>
        </ul>
      </nav>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
